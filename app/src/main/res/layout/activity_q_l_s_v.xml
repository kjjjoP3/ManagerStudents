<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".Activity_StudentManager">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="TÊN LỚP"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/snp_lop"
            android:layout_weight="3"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="STT "
        android:gravity="center"
        android:textSize="15sp"
        android:maxLength="10"
        android:enabled="false"
        android:background="@drawable/botron"
        android:id="@+id/edt_stt"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Name "
        android:gravity="center"
        android:textSize="15sp"
        android:maxLength="10"
        android:background="@drawable/botron"
        android:id="@+id/edt_ten"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter number phone "
        android:inputType="phone"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:background="@drawable/botron"
        android:id="@+id/edt_sdt"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:hint="Enter Email "
        android:textSize="15sp"
        android:background="@drawable/botron"
        android:id="@+id/edt_email"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="10dp">
        <Button
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/btn_reset"
            android:textColor="#FFF"
            android:layout_margin="10dp"
            android:background="@drawable/botron_control"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="RESET"
            />
        <Button
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/btn_save"
            android:layout_margin="10dp"
            android:textColor="#FFF"
            android:background="@drawable/botron_control"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="SAVE"
            />
        <Button
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/btn_update"
            android:textColor="#FFF"
            android:layout_margin="10dp"
            android:background="@drawable/botron_control"
            android:textSize="15sp"
            android:textStyle="bold"
            android:enabled="false"
            android:text="UPDATE"
            />

    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/lv_sv"/>
</LinearLayout>