<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddLop"
            android:text="Them Lop"
            android:layout_gravity="center"
            android:onClick="themLop"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/btnListLop"
            android:text="Xem Danh Sach Lop"
            android:layout_gravity="center"
            android:onClick="ListLop"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnQLSV"
            android:text="Quan Ly Sinh Vien"
            android:layout_gravity="center"
            android:onClick="qlsv"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>